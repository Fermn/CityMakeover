<div>
  <% if user_signed_in? %>
    <% if fixpoint.votes.where(user: current_user).any? %>
      <%= link_to "Downvote", fixpoint_vote_path(fixpoint, fixpoint.votes.where(fixpoint: fixpoint, user: current_user).first), method: :delete, remote: true, class: "btn btn-outline-primary" %>
    <% else %>
      <%= link_to "Upvote", fixpoint_votes_path(fixpoint), method: :post, remote: true, class: "btn btn-outline-primary" %>
    <% end %>
  <% end %>
</div>
<div>
  <strong><%= fixpoint.votes.count %></strong><strong> VOTES</strong>
</div>



