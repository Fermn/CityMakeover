<h1><%= @fixpoint %></h1>
<div>
  <div class="img">
    <%= image_tag ("photos/garbage1.jpeg")%><br>
    <% @fixpoint.created_at %> Created <%= time_ago_in_words(Date.today) %> ago
  </div>
  <div class="card-body">
    <p>
      <%= @fixpoint.category %>
      <br>
      <%= @fixpoint.latitude %><%= @fixpoint.longitude %>
      <br>
    </p>
  </div>
</div>
<%= link_to 'Back' %>
<% if @fixpoint.photos.any? %>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag @fixpoint.photos.first.url %>
      </div>
      <div class="carousel-item active">
        <%= image_tag @fixpoint.photos.last.url %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>